{
    "variables": {
        "aws_access_key": "",
        "aws_secret_key": ""
    },
    "builders": [{
        "type": "amazon-ebs",
        "access_key": "{{user `aws_access_key`}}",
        "secret_key": "{{user `aws_secret_key`}}",
        "region": "us-east-1",
        "subnet_id": "subnet-0fee81395b8ef8070",
        "associate_public_ip_address": true,
        "ssh_interface": "private_ip",
        "availability_zone": "us-east-1e",
        "source_ami": "ami-009d6802948d06e52",
        "security_group_ids": ["sg-0609210ce6038dbac","sg-00e5f8e14fa956043"],
        "instance_type": "t2.micro",
        "ssh_username": "ubuntu",
        "ssh_keypair_name": "auth0test",
        "ssh_agent_auth": true,
        "ami_name": "limitd-example {{timestamp}}"
    }],
    "provisioners": [
        {
            "type": "file",
            "source": "./limitd.tar",
            "destination": "/home/ubuntu/"
        },
        {
            "type": "shell",
            "inline": [
                "sleep 30",
                "sudo amazon-linux-extras install docker",
                "docker import /home/ubuntu/limitd.tar auth0/limitd:v1",
                "rm /home/ubuntu/limitd.tar"
            ]
        }
    ]
}
